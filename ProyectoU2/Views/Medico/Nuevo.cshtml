            </div>

            <div>
                @Html.LabelFor(d => d.idEspecialidad) <br />
                @Html.EditorFor(d => d.idEspecialidad, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.idEspecialidad, null, new { @class = "red" })
            </div>

            <div>
                @Html.LabelFor(d => d.idHorario) <br />
                @Html.EditorFor(d => d.idHorario, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.idHorario, null, new { @class = "red" })
            </div>

            <br />
            <br />
            <div>
                <input value="Guardar" class="btn btn-primary" type="submit" />
            </div>
        </div>

    </div>
}
