@model ProyectoU2.Models.ViewModel.MedicoViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>



@using (Html.BeginForm("Editar", "medico", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d => d.cedula_me)
            <div>
                @Html.LabelFor(d => d.correo_me)
                @Html.TextBoxFor(d => d.correo_me, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.correo_me, null, new { @class = "red" })
            </div>

            <div>
                @Html.LabelFor(d => d.telefono_me)
                @Html.TextBoxFor(d => d.telefono_me, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.telefono_me, null, new { @class = "red" })
            </div>

            <div>
                @Html.LabelFor(d => d.ciudad_me)
                @Html.TextBoxFor(d => d.ciudad_me, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.ciudad_me, null, new { @class = "red" })
            </div>

            <div>
                @Html.LabelFor(d => d.direccion_me) <br />
                @Html.EditorFor(d => d.direccion_me, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.direccion_me, null, new { @class = "red" })
            </div>

            <div>
                @Html.LabelFor(d => d.passwod_me) <br />
                @Html.EditorFor(d => d.passwod_me, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.passwod_me, null, new { @class = "red" })
            </div>


            <br />
            <br />
            <div>
                <input value="Editar" class="btn btn-primary" type="submit" />
            </div>
        </div>

    </div>
}


